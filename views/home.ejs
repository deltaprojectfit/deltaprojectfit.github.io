  <!-- CONTACT FORM -->
  <section class="contact-form">
    <h3>Book A Session</h3>
    <!-- Form Start -->
    <form action="">
      <!-- Name -->
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" placeholder="Text input" required>
        </div>
      </div>

      <!-- Phone Number -->
      <div class="field">
        <label class="label">Phone Number</label>
        <div class="control">
          <input class="input" type="text" placeholder="555-555-5555">
        </div>
      </div>

      <!-- Email Address -->
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="text" placeholder="someone@example.com">
        </div>
      </div>

      <!-- Primary Goal -->
      <div class="field">
        <label class="label">Primary Goal</label>
        <div class="control">
          <div class="select">
            <select>
              <option>-- Select Dropdown --</option>
              <option>Gain Muscle</option>
              <option>Lose Fat</option>
              <option>Improve Health</option>
              <option>Get Stronger</option>
              <option>Enhance Cardio</option>
              <option>Athletic Performance</option>
              <option>Better Mental Health</option>
              <option>Other (Include Below)</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Secondary Goal -->
